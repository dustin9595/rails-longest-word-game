
<div class="container">
  <h1 class="headline">New game</h1>
  <div class="boxes">
    <% @letters.each do |letter| %>
    <p class="box"><%= letter %></p>
    <% end %>
  </div>
  <div class="form-element">
    <p class="question">What is the longest word you can find?</p>
    <form action="/score" method="post" class="form-inline">
      <div class="form-group">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <input type="text" name="word" class="form-control input" autocomplete="off">
      </div>
      <button type="submit" value="Play" class="btn btn-primary">Play</button>
    </form>
  </div>
</div>
